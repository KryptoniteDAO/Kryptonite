{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "useDefineForClassFields": true,
    "noImplicitOverride": false,
    "allowJs": true,
    "moduleResolution": "Node",
    "target": "esnext",
    "lib": ["es2015", "dom", "esnext"],
    "types": ["node", "jsdom", "jest"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
